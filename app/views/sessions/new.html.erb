<h2 class="ui center aligned large header">
  Myチャットへようこそ！
</h2>

<h4 class="ui center aligned medium icon header">
  <i class="arrow alternate circle left tiny blue icon"></i>
  ログインしてください
</h4>

<div class="ui placeholder segment">
  <div class="ui two column very relaxed stackable grid">
    <div class="column">
      <%= form_for(:session, html: {class: "ui form", role: "form"}, url: login_path) do |f| %>
        <div class="ui form">
          <div class="field">
            <%= f.label :username, "ユーザー名" %>
            <div class="ui left icon input">
              <%= f.text_field :username, placeholder: "ユーザー名" %>
              <i class="user icon"></i>
            </div>
          </div>
          <div class="field">
            <%= f.label :password, "パスワード" %>
            <div class="ui left icon input">
              <%= f.password_field :password, placeholder: "パスワード" %>
              <i class="lock icon"></i>
            </div>
          </div>
          <%= f.button "ログイン", class: "ui blue submit button" %>
        </div>
      <% end %>
    </div>
    <div class="middle aligned column">
      <div class="ui big button">
        <i class="signup icon"></i>
        アカウント登録
      </div>
    </div>
  </div>
  <div class="ui vertical divider">
    または
  </div>
</div>